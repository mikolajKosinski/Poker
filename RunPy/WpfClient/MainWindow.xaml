<Window x:Class="WpfClient.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfClient"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
        Title="MainWindow" Height="450" Width="900">
    <Window.Resources>
        <local:BoolToVisConverter x:Key="boolToVisConv" />
    </Window.Resources>
    <Border BorderThickness="1" BorderBrush="Black">
    <Grid>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">                    
                    <VisualState x:Name="ScreenAnalyzer">
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="button1" 
                            Storyboard.TargetProperty="Width" To="50" />
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="8*" />
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center">
                <Button Content="MainWindow" Command="{Binding MainWindowCommand}"/>
                <Button Content="Areas" Command="{Binding AreasWindowCommand}"/>
                <Button Content="Settings" Command="{Binding SettingsWindowCommand}"/>
            </StackPanel>

            <Grid Grid.Row="1"
                  Visibility="{Binding IsSettingsVisible, Converter={StaticResource boolToVisConv}}">
                <local:SettingsView
                    DataContext="{Binding SettingsViewModel}" />
            </Grid>

            <Grid Grid.Row="1" Grid.RowSpan="2" 
                  Visibility="{Binding IsAreasVisible, Converter={StaticResource boolToVisConv}}">
                <local:AreasView 
                DataContext="{Binding AreasViewModel}" />
            </Grid>
            <Grid Grid.Row="1"
                  Visibility="{Binding IsMainVisible, Converter={StaticResource boolToVisConv}}">
                <StackPanel Orientation="Horizontal">            
                <Button Content="Analyze" Width="80" Height="30" Command="{Binding AnalyzeCommand}" Grid.Column="0"/>
                <ListBox Height="30" VerticalAlignment="Top">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel IsItemsHost="True" Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBoxItem x:Name="TEst" >
                            <Button Content="General" Command="{Binding GeneralTabCommand}"/>
                        </ListBoxItem>
                        <ListBoxItem>
                            <Button Content="{Binding RoyalFlushTabName}" Command="{Binding RoyalTabCommand}" />
                        </ListBoxItem>
                        <ListBoxItem>
                            <Button Content="{Binding StraightFlushTabName}" Command="{Binding StraightFlushTabCommand}" />
                        </ListBoxItem>
                        <ListBoxItem>
                            <Button Content="{Binding FourOfKindTabName}" Command="{Binding FourOfKindTabCommand}" />
                        </ListBoxItem>
                        <ListBoxItem>
                            <Button Content="{Binding FullTabName}" Command="{Binding FullTabCommand}" />
                        </ListBoxItem>
                        <ListBoxItem>
                            <Button Content="{Binding FlushTabName}" Command="{Binding FlushTabCommand}" />
                        </ListBoxItem>
                        <ListBoxItem>
                            <Button Content="{Binding StraightTabName}" Command="{Binding StraightTabCommand}" />
                        </ListBoxItem>
                        <ListBoxItem>
                            <Button Content="{Binding ThreeOfKindTabName}" Command="{Binding ThreeOfKindTabCommand}" />
                        </ListBoxItem>
                        <ListBoxItem>
                            <Button Content="{Binding PairTabName}" Command="{Binding PairTabCommand}"  />
                        </ListBoxItem>
                    </ListBox>

                   




