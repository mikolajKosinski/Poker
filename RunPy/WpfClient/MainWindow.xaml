<Window x:Class="WpfClient.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfClient"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:BoolToVisConverter x:Key="boolToVisConv" />
    </Window.Resources>
    <Border BorderThickness="1" BorderBrush="Black">
    <Grid>
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">                    
                    <VisualState x:Name="ScreenAnalyzer">
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="button1" 
                            Storyboard.TargetProperty="Width" To="50" />
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="8*" />
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center">
                <Button Content="MainWindow" Command="{Binding MainWindowCommand}"/>
                <Button Content="Areas" Command="{Binding AreasWindowCommand}"/>
                <Button Content="Settings" Command="{Binding SettingsWindowCommand}"/>
            </StackPanel>

            <Grid Grid.Row="1"
                  Visibility="{Binding IsSettingsVisible, Converter={StaticResource boolToVisConv}}">
                <local:SettingsView
                    DataContext="{Binding SettingsViewModel}" />
            </Grid>

            <Grid Grid.Row="1" 
                  Visibility="{Binding IsAreasVisible, Converter={StaticResource boolToVisConv}}">
                <local:AreasView 
                DataContext="{Binding AreasViewModel}" />
            </Grid>
            <StackPanel Grid.Row="1" 
                        Orientation="Horizontal" 
                        Visibility="{Binding IsMainVisible, Converter={StaticResource boolToVisConv}}">
                <Button Content="Analyze" Width="80" Height="30" Command="{Binding AnalyzeCommand}" Grid.Column="1" Grid.Row="0"/>
                <ListBox ItemsSource="{Binding DeskCards, Mode=TwoWay}" Grid.Column="2" Height="150" Width="80">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Figure}" />
                                <TextBlock Text="{Binding Color}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <ListBox ItemsSource="{Binding HandCards, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Grid.Column="2" Height="150" Width="80">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Figure}" />
                                <TextBlock Text="{Binding Color}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <ListBox ItemsSource="{Binding Hands, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Grid.Column="3" Height="150" Width="120">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding HandName}" />
                                <TextBlock Text="{Binding HandProbability}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>

